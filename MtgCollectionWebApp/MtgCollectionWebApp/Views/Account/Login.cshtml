@using MtgCollectionWebApp.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}

@section styles {
    @Styles.Render("~/templates/bs-ecosave/css")
    <link href="~/Content/prettyCheckable.css" rel="stylesheet" />

    <style>
        img {
            height: 100%;
        }

        .navbar {
            visibility: hidden;
        }

        #home {
        }
    </style>

}


<div id="pre-div">
    <div id="loader">
    </div>
</div>

<div id="home">
    <div>
        <div class="container">
            <div class="row ">
                <div class="col-lg-9 col-md-9 head-text">
                    <h1 id="divDisp">What does this app help you to do?</h1>
                    <span>
                        <i class="fa fa-code"></i>Manage your card collection
                    </span>
                    <span>
                        <i class="fa fa-code"></i>Stay up to date with latest decks and card information in your community
                    </span>

                    <span>
                        <i class="fa fa-code"></i>Create, view and join MTG tournaments
                    </span>
                </div>
                <div class="col-lg-3 col-md-3">
                    <div class="div-trans text-center">
                        <h2><i class="fa fa-code"></i><span>Login</span>  <i class="fa fa-code"></i></h2>
                        <div class="col-lg-12 col-md-12 col-sm-12">

                            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                            {
                                @Html.AntiForgeryToken()
                                <h4>Use local account to log in.</h4>
                                <hr />
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-group">
                                    <div class="col-md-12">
                                        @Html.TextBoxFor(m => m.Email, new { @placeholder = "Email", @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-12">
                                        @Html.PasswordFor(m => m.Password, new { @placeholder = "Password", @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                               
                                <div class="form-group">
                                    <div class="col-md-12">
                                        <input type="submit" value="Log in" class="btn btn-success btn-block btn-lg" />
                                    </div>
                                </div>
                                <p>
                                    @Html.ActionLink("Register as a new user", "Register")
                                </p>
                            }

                        </div>

                    </div>
                </div>
            </div>

        </div>

    </div>

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/templates/bs-ecosave/")
}