@model IEnumerable<MtgCollectionWebApp.Models.Card>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>


    
    <form action="/Cards/SearchByName" method="get">
        <input id="txtTest" type="text" name="q" style="width: 400px;" />
        <input type="submit" value="Search" />
    </form>

<table id="table" class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CardName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CardType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CardManaCost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CardArtist)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CardText)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CardFlavour)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CardPower)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CardToughness)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CardImageUrl)
        </th>

        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CardName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CardType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CardManaCost)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CardArtist)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CardText)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CardFlavour)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CardPower)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CardToughness)
        </td>
        <td>
            <img src="@item.CardImageUrl"/>
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.CardId })
        </td>
    </tr>
}
</table>